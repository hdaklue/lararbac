{
    "name": "hdaklue/porter",
    "description": "Ultra-Minimal Laravel Role Management - Your application's trusted doorkeeper",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "roles",
        "access-control",
        "authorization",
        "security",
        "porter"
    ],
    "authors": [
        {
            "name": "KluePortal Team",
            "email": "dev@klueportal.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Hdaklue\\Porter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hdaklue\\Porter\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hdaklue\\Porter\\Providers\\PorterServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "test-parallel": "pest --parallel",
        "lint": "pint",
        "lint-check": "pint --test"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}